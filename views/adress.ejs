<%- include("./parts//header.ejs") %>
<section>
    <div class="container-fluid d-flex row">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark col-3" style=" height: 100vh;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <span class="fs-4 ms-3">Apex</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/admin_panel/" class="nav-link text-white">
                        Asosiy
                    </a>
                </li>
                <li>
                    <a href="/admin_panel/applicants/" class="nav-link text-white ">
                        Arizachilar
                    </a>
                </li>
                <li>
                    <a href="/admin_panel/news/" class="nav-link text-white ">
                        Yangiliklar
                    </a>
                </li>
                <li>
                    <a href="/admin_panel/courses/" class="nav-link text-white ">
                        Kurslar
                    </a>
                </li>
                <li>
                    <a href="/admin_panel/scenes/" class="nav-link text-white">
                        Lavhalar
                    </a>
                </li>
                <li>
                    <a href="/admin_panel/results/" class="nav-link text-white">
                        Natijalari
                    </a>
                </li>
                <li>
                    <a href="/admin_panel/comments/" class="nav-link text-white ">
                        Izohlar
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white active">
                        Manzil
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white">
                        Aloqa
                    </a>
                </li>
                <li>
                    <a href="/admin_panel/sessions/" class="nav-link text-white">
                        Sessiyalar
                    </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                    id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">

                    <strong>Akkaunt</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">

                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li><a class="dropdown-item" href="/sign_out">Sign out</a></li>
                </ul>
            </div>
        </div>

        <div class="col-9 mt-5 mb-3">
            <div>
                <h3 class="mt-1 text-center text-info">Bog'lanish manzilini o'zgartirish</h3>

                <form id="form" method="POST" enctype="multipart/form-data"
                    class="w-100 d-flex flex-column align-items-center mt-4 justify-content-center" autocomplete="off">
                    <div class="row w-100">
                        <% if(error) { %>
                        <div class="alert alert-danger">
                            <%= error  %>
                        </div>
                        <% } %>
                        <div class="col-lg-6">
                            <input id="name" type="text" name="a_map" required
                                placeholder="Xaritaning iframeni joylashtiring..." class="form-control">
                            <input id="name" type="text" name="a_location" placeholder="Manzilni yozing..."
                                class="form-control mt-2" required>
                            <input id="name" type="text" name="a_phone" placeholder="Telefon raqam kiriting..."
                                class="form-control mt-2" required>
                            <input id="name" type="email" name="a_email" placeholder="Email kiriting..."
                                class="form-control mt-2" required> 
                        </div>
                        <div class="col-lg-6">
                            <input id="name" type="text" name="a_telegram_link" required
                                placeholder="Telegram linkini joylashtiring..." class="form-control">
                            <input id="name" type="text" name="a_youtube_link" placeholder="Youtube linkini joylashtiring..."
                                class="form-control mt-2" required>
                            <input id="name" type="text" name="a_facebook_link" placeholder="Facebook linkini yozing..."
                                class="form-control mt-2" required>
                            <button type="submit" class="btn w-100 btn-primary mt-2">
                                    O'zgartirish
                                </button>
                        </div>

                    </div>

                </form>

            </div> 
        </div>
    </div>
</section>


